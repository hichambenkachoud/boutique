{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - La boutique francaise{% endblock %}

{% block content %}
    <div class="row details">
        <div class="col-md-5">
            <img src="/uploads/{{ product.image }}" alt="{{ product.name }}" class="product-image">
        </div>
        <div class="col-md-7">
            <h1>{{ product.name }}</h1>
            <h5>{{ product.name }}</h5>
            <span class="product-subtitle">{{ product.subtitle }}</span>
            <span class="product-price">{{ (product.price / 100) | number_format(2, ',', '.') }} $</span>
            <hr>
            <p>
                {{ product.description }}
            </p>

            <a href="{{ path('app_add_cart', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
        </div>
    </div>

{% endblock %}
